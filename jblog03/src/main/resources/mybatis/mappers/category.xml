<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="category">

	<!-- insert category -->
	<insert id="insert" parameterType="categoryvo">	
	<![CDATA[ 
		INSERT
		  INTO category (blog_id, name, `desc`)
		VALUES (#{id}, #{name}, #{desc})
	]]>
	</insert>

	<!-- delete category -->
	<delete id="delete" parameterType="long">	
	<![CDATA[ 
		DELETE
		  FROM category
		 WHERE = #{no}  
	]]>
	</delete>

	<!-- findAllCount category -->
	<select id="findAllCount" resultType="double">
	<![CDATA[
		SELECT count(*) 
		  FROM category
	]]>
	</select>
	
	<!-- findByOne Recently category -->
	<select id="findByOne" resultType="categoryvo" parameterType="map">
	<![CDATA[
		SELECT name , no
		  FROM category
		 WHERE 1=1
		   AND blog_id = #{id}
		 LIMIT 0 , 1
	]]>
	</select>

	<!-- findCountByPostNo category -->
	<select id="findCountByPostNo" resultType="double" parameterType="map">
	<![CDATA[
		SELECT count(*) 
		  FROM category c , post p
		 WHERE 1=1
		   AND c.blog_id = #{id}
		   AND p.category_no = c.no
		   AND p.category_no = #{no}
	]]>
	</select>
	
	<!-- findByList category -->
	<select id="findByList" parameterType="map" resultType="categoryvo">
	<![CDATA[
		SELECT no , name , desc, blog_id
		  FROM category
		 WHERE 1=1
		   AND blog_id = #{id};
	]]>
	</select>
	
	<!-- findByNo category -->
	<select id="findByNo" parameterType="map" resultType="categoryvo">
	<![CDATA[
		SELECT no , name , desc , blog_id
		  FROM category
		 WHERE 1=1
		   AND blog_id = #{id}
		   AND no = #{no}
	]]>
	</select>

</mapper>